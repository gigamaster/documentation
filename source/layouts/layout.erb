<% language_tabs = current_page.data.language_tabs || [] %>
<% page_content = yield %>
<%
  if current_page.data.includes
    current_page.data.includes.each do |include|
      page_content += partial("includes/#{include}")
    end
  end
%>

<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <title><%= current_page.data.title || "Documentation" %></title>

    <style>
      <%= Rouge::Theme.find('base16.monokai').render(scope: '.highlight') %>
    </style>

    <%= stylesheet_link_tag :screen, media: :screen %>

    <%= stylesheet_link_tag :print, media: :print %>

    <%= favicon_tag 'images/favicon.ico' %>

    <% if current_page.data.search %>
      <%= javascript_include_tag  "all" %>
    <% else %>
      <%= javascript_include_tag  "all_nosearch" %>
    <% end %>

    <script src="https://unpkg.com/mermaid@8.0.0/dist/mermaid.min.js"></script>
    <script src="https://code.iconify.design/1/1.0.0/iconify.min.js"></script>
    <script>

    window.addEventListener('DOMContentLoaded', (event) => {

      // Top-navigation Show and Hide
      $(window).scroll(function() {
        if ($(this).scrollTop() > 200) {
          $('.top-nav').fadeIn(200);
        } else {
          $('.top-nav').fadeOut(200);
        }
      });

      // Animate Top-navigation
      $('.top-nav').click(function(event) {
        event.preventDefault();
        $('html, body').animate({scrollTop: 0}, 300);
      });

      // Console log
      console.log('DOM fully loaded and parsed');

    });

      // Mermaidjs graph renderer
      var config = {
          startOnLoad:true,
          flowchart:{
              useMaxWidth:false,
              htmlLabels:true
          }
      };

      mermaid.initialize();

    </script>

  </head>

  <body class="<%= page_classes %>" data-languages="<%=h language_tabs.map{ |lang| lang.is_a?(Hash) ? lang.keys.first : lang }.to_json %>">

  <a href="#" id="nav-button">
  <span>
    <%= image_tag('navbar.png') %>
  </span>
  </a>

  <div class="module-topbar">
      <div class="topbar-logo">
      <a class="logo" href="/" title="Back to API documentation">

      <span class="iconify" data-icon="uil:cube" data-inline="false">
      </a>
      </div>
          <div class="topbar-index">
            <div class="topbar-index-tree">
              <div class="branch-id">
              <a href="/" aria-label="Log In" class="login-button"><span class="iconify" data-icon="mdi-light:sitemap" data-inline="false" style="color: #face74;"></span></a>
              </div>
            </div>
          </div>

        <% if current_page.data.search %>
            <div class="topbar-search">
              <div class="topbar-search-form">

              <input type="text" class="search search-input-field" id="input-search" placeholder="Search">
              <span class="search-clear-button" id="search-clear-button" ></span>
              </div>
                  <ul class="hidden search-options search-results">
                  <li class="search-option">status: </li>
                  <li class="search-option">team: </li>
                  </ul>
            </div>
        <% end %>

  </div>

    <div class="toc-wrapper">

      <% if language_tabs.any? %>
        <div class="lang-selector">
          <% language_tabs.each do |lang| %>
            <% if lang.is_a? Hash %>
              <a href="#" data-language-name="<%= lang.keys.first %>"><%= lang.values.first %></a>
            <% else %>
              <a href="#" data-language-name="<%= lang %>"><%= lang %></a>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <div id="toc" class="toc-list-h1">
        <% unless current_page.data.home %>
          <a class="faux-toc-link" href="/"><span class="iconify" data-icon="uil:sitemap" data-inline="false"></span> Back to documentation</a>
        <% end %>

        <% toc_data(page_content).each do |h1| %>
          <li>
            <a href="#<%= h1[:id] %>" class="toc-h1 toc-link" data-title="<%= h1[:content] %>"><%= h1[:content] %></a>
            <% if h1[:children].length > 0 %>
              <ul class="toc-list-h2">
                <% h1[:children].each do |h2| %>
                  <li>
                    <a href="#<%= h2[:id] %>" class="toc-h2 toc-link" data-title="<%= h2[:content] %>"><%= h2[:content] %></a>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </li>
        <% end %>

        <% if current_page.data.home %>
          <a class="faux-toc-link" href="/index.html">Index API</a>
        <% end %>
      </div>

      <% if current_page.data.toc_footers %>
        <ul class="toc-footer">
          <% current_page.data.toc_footers.each do |footer| %>
            <li><%= footer %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div class="page-wrapper code-page">

      <div class="code-right"></div>

      <div class="content">
        <%= page_content %>
      </div>

      <div class="code-right">
        <% if language_tabs.any? %>
          <div class="lang-selector">
            <% language_tabs.each do |lang| %>
              <% if lang.is_a? Hash %>
                <a href="#" data-language-name="<%= lang.keys.first %>"><%= lang.values.first %></a>
              <% else %>
                <a href="#" data-language-name="<%= lang %>"><%= lang %></a>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>

    </div>

    <a href="#" class="top-nav"><span class="iconify" data-icon="uil:sort-amount-up" data-inline="false"></span>Top</a>

    </body>
</html>
